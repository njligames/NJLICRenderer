cmake_minimum_required(VERSION 2.8.2)

project(nlohmann_json-download NONE)

include(ExternalProject)
ExternalProject_Add(nlohmann_json
        GIT_REPOSITORY    https://github.com/nlohmann/json.git
        GIT_TAG           v3.10.5
        SOURCE_DIR        "${CMAKE_CURRENT_BINARY_DIR}/nlohmann_json-src"
        BINARY_DIR        "${CMAKE_CURRENT_BINARY_DIR}/nlohmann_json-build"
        CONFIGURE_COMMAND ""
        BUILD_COMMAND     ""
        INSTALL_COMMAND   ""
        TEST_COMMAND      ""
        )

ExternalProject_Get_Property(nlohmann_json source_dir)
set(NLOHMANN_JSON_INCLUDE_DIR ${CMAKE_CURRENT_BINARY_DIR}/nlohmann_json-src/include)
